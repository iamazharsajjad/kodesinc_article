<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-10">
    <h1>Articles</h1>
  </div>  
  <div class="col-2">
    <%= link_to "New article", new_article_path, class: "btn btn-success" %>
  </div>

</div>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article, class: "btn btn-primary" %>
    </p>
    <hr/>
  <% end %>
</div>

